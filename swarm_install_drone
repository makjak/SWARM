
function replace(src,dst)
	if fs.exists(dst) then
		fs.delete(dst)
	end
	fs.copy(src,dst)
end

print("SWARM drone installer")

local files = {"drone","swarm","debug","map","heap","swarm_drone","swarm_startup_drone"}
for i = 1,#files,1 do
	
	if i == #files then
		replace("/disk/"..files[i],"/startup")
	else
		replace("/disk/"..files[i],"/"..files[i])
	end
	
end
replace("/disk/swarm_config_drone","/config_"..os.getComputerID())
os.setComputerLabel("drone "..os.getComputerID())


print("Installer finished, place drone in homePos an boot it. Then change the config, if you want, and reboot it again.")