local url = "https://raw.githubusercontent.com/ninnghazad/SWARM/master/"
local files = {
	"debug",
	"map",
	"heap",
	"swarm",
	"drone",
	
	"swarm_install_drone",
	"swarm_config_drone",
	
}
local r,i,f,fn
for i,fn in pairs(files) do
	r = http.get(url..fn)
	if r then
		r = r.readAll()
		f = io.open("./"..fn,"w")
		f:write(r)
		f:close()
		print("Successfully downloaded "..fn)
	else
		print("Could not download "..url..fn)
	end
end
print("All downloads finished.\nTo install type one of:")
print("\tswarm_install_drone")
print("\tswarm_install_mapserver")
print("\tswarm_install_jobserver")
print("\tswarm_install_infoserver")
print("To just use the accompanying tools,\nno install is necessary.")
