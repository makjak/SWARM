local url = "https://raw.githubusercontent.com/ninnghazad/SWARM/master/"
local files = {
	"debug",
	"map",
	"heap",
	"swarm",
	"drone",
	"installer",
	"swarm_config_drone",
	"swarm_config_mapserver",
	"swarm_config_infoserver",
	"swarm_config_jobserver",
	"swarm_startup_drone",
	"swarm_startup_mapserver",
	"swarm_startup_infoserver",
	"swarm_startup_jobserver",
	"swarm_drone",
	"swarm_mapserver",
	"swarm_jobserver",
	"swarm_infoserver",
}

local r,i,f,fn
for i,fn in pairs(files) do
	r = http.get(url..fn)
	if r then
		r = r.readAll()
		f = io.open("./"..fn,"w")
		f:write(r)
		f:close()
		print("OK: "..fn)
	else
		print("Could not download "..url..fn)
		os.exit(true)
	end
end

term.clear()
term.setCursorPos(1,1)
print("All downloads finished.\n\nType installer to install stuff.")
print("\nTo just use the accompanying tools,\nno install is necessary.\nJust copy them whereever.")
